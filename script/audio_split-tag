#!/usr/bin/env bash
# audio_Split-Tag - Splits a full audio file using a .cue file and tags each track.
# Supports FLAC, M4A, and APE input. Can inject cover art and optionally delete original file.
set -euo pipefail
IFS=$'\n\t'

show_help() {
  cat <<EOF
Usage: ${0##*/} [-d DIR] [-c CUEFILE] [-f AUDIOFILE] [--delete-original]

Options:
  -d, --directory DIR         Target directory (default: current)
  -c, --cue FILE              Specify .cue file
  -f, --audio_file FILE       Specify audio file (.flac, .m4a, .ape)
      --delete-original       Delete original file after successful split
  -h, --help                  Show this help message
EOF
}

# Defaults
dir="."
cue_file=""
audio_file=""
delete_original=false
wav_file=""

# Parse arguments
while [[ $# -gt 0 ]]; do
  case "$1" in
    -d|--directory)
      dir="$2"
      shift 2
      ;;
    -c|--cue)
      cue_file="$2"
      shift 2
      ;;
    -f|--audio_file)
      audio_file="$2"
      shift 2
      ;;
    --delete-original)
      delete_original=true
      shift
      ;;
    -h|--help)
      show_help
      exit 0
      ;;
    *)
      echo "âŒ Unknown argument: $1"
      show_help
      exit 1
      ;;
  esac
done

# File discovery
shopt -s nullglob
cd "$dir"
[[ -z "$cue_file" ]] && cue_files=(*.cue) || cue_files=("$cue_file")
[[ -z "$audio_file" ]] && audio_files=(*.flac *.m4a *.ape) || audio_files=("$audio_file")
shopt -u nullglob

# Sanity checks
if [[ ${#cue_files[@]} -ne 1 ]]; then
  echo "âŒ Error: Expected exactly one .cue file. Found ${#cue_files[@]}."
  exit 1
fi
if [[ ${#audio_files[@]} -ne 1 ]]; then
  echo "âŒ Error: Expected exactly one .flac/.m4a/.ape file. Found ${#audio_files[@]}."
  exit 1
fi

cue_file="${cue_files[0]}"
input_file="${audio_files[0]}"
input_ext="${input_file##*.}"
base="${input_file%.*}"

# Convert if necessary
case "$input_ext" in
  m4a)
    converted_flac="${base}.converted.flac"
    echo "ğŸ” Converting .m4a to .flac: $converted_flac"
    ffmpeg -loglevel error -y -i "$input_file" "$converted_flac"
    audio_flac="$converted_flac"
    ;;
  ape)
    wav_file="${base}.decoded.wav"
    echo "ğŸ” Decoding .ape to .wav: $wav_file"
    ffmpeg -loglevel error -y -i "$input_file" "$wav_file"
    audio_flac="$wav_file"
    ;;
  flac)
    audio_flac="$input_file"
    ;;
  *)
    echo "âŒ Unsupported audio format: .$input_ext"
    exit 1
    ;;
esac

echo "ğŸ“ Directory: $(pwd)"
echo "ğŸ§ Audio:     $audio_flac"
echo "ğŸ“„ CUE:       $cue_file"
echo "ğŸ”ª Splitting..."

shnsplit -f "$cue_file" -t "%n - %t" -o flac "$audio_flac"

# Clean up decode.wav if used
[[ -n "${wav_file:-}" && -f "$wav_file" ]] && rm -f "$wav_file"

# Get split files and expected track count
split_files=($(find . -maxdepth 1 -type f -name '[0-9][0-9] - *.flac' | sort))
track_count=$(grep -i "^ *TRACK [0-9][0-9]* AUDIO" "$cue_file" | wc -l)

# Delete extra file (likely pregap)
if (( ${#split_files[@]} > track_count )); then
  echo "âš ï¸  Extra FLACs detected. Removing excess..."
  to_delete="${split_files[-1]}"
  echo "ğŸ—‘ï¸  Deleting: $to_delete"
  rm -f "$to_delete"
  split_files=($(find . -maxdepth 1 -type f -name '[0-9][0-9] - *.flac' | sort))
fi

echo "ğŸ·ï¸  Applying tags..."
for ((i=1; i<=track_count; i++)); do
  file="${split_files[$((i-1))]}"
  [ -f "$file" ] || continue
  cuetag.sh "$cue_file" "$file" >/dev/null 2>&1 || echo "âŒ Tagging failed for $file"
done

echo "ğŸ–¼ï¸  Injecting cover art..."
for img in front.jpg cover.jpg cover.jpeg folder.jpg back.jpg edge.jpg *.jpg *.png; do
  [[ -f "$img" ]] || continue
  for f in "${split_files[@]}"; do
    metaflac --remove --block-type=PICTURE "$f"
    metaflac --import-picture-from="$img" "$f"
  done
  break
done

if $delete_original; then
  echo "ğŸ§¹ Deleting original: $input_file"
  rm -f "$input_file"
fi

echo "âœ… Done. Tracks split and tagged in '.'"
